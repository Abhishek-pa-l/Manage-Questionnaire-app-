<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
>
    <Dialog
        title="Assesment Question"
        contentWidth="600px"
    >
        <content>
            <f:SimpleForm
                id="simpleFormUpdated"
                editable="false"
            >
                <Label
                    id="demandIDLabel"
                    text="Question Category"
                />

                <Select
                    id="Select112"
                    change="onSelectChangeKeyFigure"
                    items="{sModel>/}"
                    
                    liveChange=".onInputFocus"
                >
                    <items>
                        <core:Item
                            id="_IDGenItem12345"
                            key="{sModel>QuestionCatogrie}"
                            text="{sModel>QuestionCatogrie}"
                        />
                    </items>
                </Select>

                <Label
                    id="fundCenterLabel"
                    text="Question Title"
                />
                <Input
                    id="questiontitleid"
                    value=""
                />
            </f:SimpleForm>
        </content>
        <Toolbar>
            <ToolbarSpacer />
            <Button
                text="Add"
                type="Emphasized"
                press="onAdd"
            />
            <Button
                text="Cancel"
                
                press="onCancelCreateQuestionFrag"
            />
        </Toolbar>
    </Dialog>
</core:FragmentDefinition>
